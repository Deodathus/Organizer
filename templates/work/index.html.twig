{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="alert-inner--icon"><i class="ni ni-like-2"></i></span>
            <span class="alert-inner--text"><strong>success!</strong> {{ message }}</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-4">
            <h3>
                add new project
            </h3>
        </div>
    </div>
    <form action="{{ url('project.store') }}" method="post">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <input class="form-control form-control-alternative" required name="title" placeholder="title" type="text">
                </div>
            </div>
            <div class="offset-8 col-1 text-center">
                <button type="submit" class="btn btn-success">add</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-4">
            <h3>add new entry</h3>
        </div>
        <div class="col-2 offset-5 text-center">
            <span class="badge badge-info">you can also use datepicker as calendar</span>
        </div>
    </div>
    <form action="{{ url('work.store') }}" method="post">
        <div class="row">
            <div class="col-3">
                <div class="form-group">
                    <input required name="title" type="text" placeholder="title" class="form-control form-control-alternative">
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <input required name="description" type="text" placeholder="description" class="form-control form-control-alternative">
                </div>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <input required name="time_amount" type="text" placeholder="time amount [x]h [x]m" class="form-control form-control-alternative">
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <input required name="date" type="date" class="form-control form-control-alternative">
                </div>
            </div>
            <div class="col-1 text-center">
                <button type="submit" class="btn btn-success">add</button>
            </div>
            <div class="col-3">
                <div class="form-group">
                    <select required name="project_id" id="project_id" class="custom-select">
                        <option selected="true" disabled="disabled">choose project</option>
                        {% for project in projects %}
                            <option value="{{ project.id }}">{{ project.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </form>
    <div class="row work-days-row">
        {% for lastWorktimeEntry in lastWorktimeEntryEntities %}
            <div class="col-3 work-day-col">
                <div class="info info-horizontal bg-white work-day-info">
                    <div class="description pl-4">
                        <h5 class="title text-info">{{ lastWorktimeEntry['entries'][0].date|date('l, d-m, Y') }}</h5>

                        {% for key, workEntry in lastWorktimeEntry['entries'] %}
                            <div class="text-muted tasks">
                                <span>{{ workEntry.project.title }} | {{ workEntry.description }} | {{ workEntry.timeAmount }}</span>
                            </div>
                        {% endfor %}

                        <div class="progress-wrapper">
                            <div class="progress-info">
                                <div class="progress-label">
                                    <span>Task completed</span>
                                </div>
                                {{ lastWorktimeEntry['totalAmountInMinutes'] }}m/450m
                                <div class="progress-percentage">
                                    <span>{{ lastWorktimeEntry['doneInPercentage'] }}%</span>
                                </div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar {% if lastWorktimeEntry['doneInPercentage'] == 100 %} bg-info {% else %} bg-success {% endif %}"
                                     role="progressbar" aria-valuenow="{{ lastWorktimeEntry['doneInPercentage'] }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ lastWorktimeEntry['doneInPercentage'] }}%;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-4">
            <h3>your worktime</h3>
        </div>
        <div class="col-12">
            <table class="table">
            <thead>
            <tr>
                <th class="text-center">#</th>
                <th>title</th>
                <th>description</th>
                <th>time amount</th>
                <th>date</th>
                <th>options</th>
            </tr>
            </thead>
            <tbody>
            {% for worktimeEntry in worktimeEntryEntities %}
                <tr>
                    <td class="text-center">{{ worktimeEntry.id }}</td>
                    <td>{{ worktimeEntry.title }}</td>
                    <td>{{ worktimeEntry.description }}</td>
                    <td>{{ worktimeEntry.timeAmount }}</td>
                    <td>{{ worktimeEntry.stringDate }}</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#modal-form-{{ worktimeEntry.id }}"><i class="fas fa-pencil-alt btn-tooltip" data-toggle="tooltip" data-placement="top" title="Edit" data-container="body" data-animation="true"></i></button>
                        <div class="modal fade" id="modal-form-{{ worktimeEntry.id }}" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit entry #{{ worktimeEntry.id }}</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="{{ url('work.update', {id: worktimeEntry.id}) }}" method="post" role="form">
                                            <div class="form-group">
                                                <input type="text" hidden name="project_id" value="{{ worktimeEntry.project.id }}">
                                            </div>
                                            <div class="form-group">
                                                <input value="{{ worktimeEntry.title }}" required name="title" type="text" placeholder="title" class="form-control form-control-alternative">
                                            </div>
                                            <div class="form-group">
                                                <input value="{{ worktimeEntry.description }}" required name="description" type="text" placeholder="description" class="form-control form-control-alternative">
                                            </div>
                                            <div class="form-group">
                                                <input value="{{ worktimeEntry.timeAmount }}" required name="time_amount" type="text" placeholder="time amount" class="form-control form-control-alternative">
                                            </div>
                                            <div class="form-group">
                                                <input value="{{ worktimeEntry.date|date('Y-m-d') }}" required name="date" type="date" class="form-control form-control-alternative">
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary my-4">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button data-toggle="modal" data-target="#modal-notification-{{ worktimeEntry.id }}" type="button" class="btn btn-sm btn-danger"><i data-toggle="tooltip" data-placement="top" title="Delete" data-container="body" data-animation="true" class="far fa-trash-alt btn-tooltip"></i></button>
                        <div class="modal fade" id="modal-notification-{{ worktimeEntry.id }}" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
                            <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
                                <div class="modal-content bg-gradient-danger">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="py-3 text-center">
                                            <i class="ni ni-bell-55 ni-3x"></i>
                                            <h4 class="heading mt-4">are you sure you want to delete this?</h4>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <form action="{{ url('work.remove', {id: worktimeEntry.id}) }}">
                                            <button type="submit" class="btn btn-white">yes</button>
                                        </form>
                                        <button type="button" class="btn btn-link text-white ml-auto" data-dismiss="modal">close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}